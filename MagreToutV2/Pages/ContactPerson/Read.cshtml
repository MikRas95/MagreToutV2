@page
@model MalgreToutV2.Pages.ContactPerson.ReadModel
@{
}
<h2>List of Pickup persons</h2>
<br/>
<a class="btn btn-outline-primary" asp-page="/ContactPerson/Create">Create</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Phonenumber</th>
            <th>Email</th>
            <th>Pickup Point</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.PickupPeople != null) {
            @foreach (var person in Model.PickupPeople) {
        <tr>
            <td>@person.ContactPersonId</td>
            <td>@person.Name</td>
            <td>@person.PhoneNumber</td>
            <td>@person.Email</td>
            <td></td>
            @*<td>@person.DemoPickupPoints</td>*@
            <td>
                <a class="btn btn-outline-secondary" asp-page="/ContactPerson/PersonInfo" asp-route-id="@person.ContactPersonId">Info</a>
            </td>
            <td>
                <a class="btn btn-outline-danger" asp-page="/ContactPerson/Delete" asp-route-id="@person.ContactPersonId">Delete</a>
            </td>
                
            
        </tr>
            }}
    </tbody>
</table>